{% set workList = collections.featuredWork %}

 <ul class="home__works__list">
  {% for item in workList %}
    <li>
      <div class="home__works__img">
        <a href="{{item.data.link}}">
          <img src="{{item.data.img}}" alt="{{item.data.name}}" />
        </a>
      </div>
      <div class="home__works__text">
        <p>
          {{ item.data.summary }}
        </p>
        {% if item.data.links %}
          {% for link in item.data.links %}
            <a class="home__works__link" href="{{link.url}}">
              {{link.title}}
            </a>
          {% endfor %}
        {% endif %}
      </div>
    </li>
  {% endfor %}
  </ul>
