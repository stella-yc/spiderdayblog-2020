<section>
	{% for post in postslist | reverse %}
    {% if loop.index < 4 %}
		<article class="post__article" {% if post.url == url %} data-current="current item"{% endif %}>
			{% if post.data.image %}
				<a href="{{ post.url | url }}" class="post__hero-image-wrapper">
					<img alt="" src={{ post.data.image }} class="post__hero-image" />
				</a>
			{%- endif -%}
			<div>
				<h2 class="post__title">
					<a href="{{ post.url | url }}">
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}
					</a>
				</h2>
				{% if post.data.summary %}
					<p>
						{{ post.data.summary }}
					</p>
				{% endif %}
				<p>
					<time datetime="{{ post.date | machineDate }}">
						<small>{{ post.date | readableDate }}</small>
					</time>
				</p>
				{% if post.data.tags %}
					<p>
						{% for tag in post.data.tags %}
							{%- if tag != "post" -%}
								{% set tagUrl %}/tags/{{ tag }}/{% endset %}
							<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
							{%- endif -%}
						{% endfor %}
					</p>
				{% endif %}
			</div>
		</article>
  {% endif %}
	{% endfor %}
</section>
